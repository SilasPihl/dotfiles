{
  "manifest_version": 3,
  "name": "Dev Hub",
  "version": "1.0.0",
  "description": "Development notification hub - Claude status, GitHub notifications, and more",
  "permissions": ["notifications", "alarms"],
  "host_permissions": ["http://localhost:8765/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
